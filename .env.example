# ===== Backend (Render) =====
NODE_ENV=production
PORT=3001

# Prisma / Postgres
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DB?schema=public

# Auth
JWT_SECRET=change-me-very-long-random
JWT_EXPIRES_IN=8h

# CORS (comma-separated)
CORS_ORIGIN=https://your-frontend.vercel.app,http://localhost:5173

# Links (used for report/attachment hyperlinks inside generated docs)
PUBLIC_BASE_URL=https://your-backend.onrender.com

# Password reset links
FRONTEND_URL=https://your-frontend.vercel.app

# Storage
# - local: salva em disco e serve via /uploads
# - supabase: faz upload para Supabase Storage (bucket privado) e serve via URL assinada
STORAGE_PROVIDER=local

# Persistent uploads (Render Disk mount) ou pasta tempor√°ria para uploads (quando STORAGE_PROVIDER=supabase)
UPLOAD_PATH=/var/data/uploads
MAX_FILE_SIZE=10485760

# Supabase Storage (somente se STORAGE_PROVIDER=supabase)
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_STORAGE_BUCKET=uploads
SUPABASE_SIGNED_URL_EXPIRES_IN=3600

# SMTP (optional; only needed for forgot-password)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
